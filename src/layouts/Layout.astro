---
import '@/styles/global.css';
import "@/styles/starwind.css";
import { Image } from 'astro:assets';
import logo from "/src/assets/img/logo.png";
import SpeedInsights from '@vercel/speed-insights/astro';
import Analytics from '@vercel/analytics/astro';
import { Button } from "@/components/starwind/button";
import { Icon } from 'astro-icon/components'
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>LL Fantasy Tools</title>
	</head>
	<body class="w-full bg-neutral-900 roboto">
		<header class="m-auto my-10 flex flex-row items-center justify-between bg-neutral-800 rounded-xl max-w-[1800px] shadow-lg sm:rounded-3xl min-[780px]:mx-[10%] max-[780px]:my-5 max-[780px]:w-9/10">
			<div class="p-3 ml-5 text-neutral-200 flex flex-row items-center gap-6">
				<Image src={logo} alt="LL Fantasy Tools Logo" class="h-12 w-12" loading="eager" />
				<a aria-label="Ir a la página de inicio" href="/" class="cursor-pointer absolute w-12 h-12"></a>
				<h1 class="flex justify-center items-center text-xl font-medium">
					LL Fantasy Tools
					<a aria-label="Ir a la página de inicio" href="/" class="cursor-pointer absolute w-[150px] h-[28px]"></a>
				</h1>
			</div>
			<nav class="flex flex-row gap-6 m-5 text-lg max-[780px]:hidden">
				<Button variant="signIn" href="/api/signin">Iniciar sesión</Button>
				<Button variant="signUp" href="/api/register">Registrarse</Button>
			</nav>
			<nav class="min-[780px]:hidden flex items-center justify-center m-2 mr-5">
				<div class="relative">
					<input id="menu-toggle" type="checkbox" class="peer hidden" />
					<label for="menu-toggle" class="flex peer-checked:bg-neutral-700/80 rounded-[12px]">
						<span class="sr-only">Abrir menú de navegación</span>
						<Icon name="hamburger" class="cursor-pointer hover:bg-neutral-700 rounded-[12px] p-1 duration-300 w-12 h-12"/>
					</label>
					<div class="absolute right-[-8px] mt-3 w-52 h-[144px] bg-transparent rounded-xl flex-col gap-2 p-4 z-50 flex opacity-0 peer-checked:opacity-100 duration-300 backdrop-blur-[10px]"></div>
					<div  class="absolute right-0 mt-4 w-48 bg-neutral-800 rounded-xl flex-col gap-3 p-4 z-50 flex opacity-0 peer-checked:opacity-100 duration-300">
    					<Button variant="signIn" href="/api/signin">Iniciar sesión</Button>
						<Button variant="signUp" href="/api/register">Registrarse</Button>
					</div>
				</div>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<SpeedInsights />
		<Analytics/>
		<footer>
			
		</footer>	
	</body>
</html>

